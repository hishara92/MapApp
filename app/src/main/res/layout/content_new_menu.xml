<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hishara.mapapp.NewMenu.NewMenu"
    tools:showIn="@layout/activity_new_menu">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="13"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp">

        <Button
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:text="Find Place"
            android:id="@+id/button_find"
            android:layout_row="2"
            android:layout_column="1"
            android:shadowColor="#8aeff8"
            android:background="@android:color/holo_blue_dark"
            android:bottomRightRadius="40dp"
            android:bottomLeftRadius="40dp"
            android:topLeftRadius="40dp"
            android:topRightRadius="40dp"

            />

        <Button
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:text="My Trails"
            android:id="@+id/button_rat"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@android:color/holo_blue_dark"
            />

        <Button
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:text="Experience"
            android:id="@+id/button_ex"
            android:layout_row="6"
            android:layout_column="1"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:text="Add Place"
            android:id="@+id/button_addPlace"
            android:layout_row="6"
            android:layout_column="3"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp"
            />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GuideMe"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/tourism"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
