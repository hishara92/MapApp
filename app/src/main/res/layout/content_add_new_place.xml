<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hishara.mapapp.AddNewPlace"
    tools:showIn="@layout/activity_add_new_place"
    android:background="#d5d6d7">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPlaceName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPlaceAdd"
        android:layout_below="@+id/etPlaceName"
        android:layout_alignStart="@+id/etPlaceName"
        android:layout_marginTop="40dp"
        android:layout_alignEnd="@+id/etPlaceName" />

    <Spinner
        android:id="@+id/spCat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:spinnerMode="dropdown"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/textView10" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/spCat"
        android:layout_marginBottom="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/textView8"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etPlaceName"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address"
        android:id="@+id/textView9"
        android:layout_below="@+id/etPlaceName"
        android:layout_alignStart="@+id/etPlaceName"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Catagory"
        android:id="@+id/textView10"
        android:layout_below="@+id/etPlaceAdd"
        android:layout_marginTop="22dp"
        android:layout_alignStart="@+id/etPlaceAdd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_menu_myplaces"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@android:drawable/ic_menu_mylocation"

        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@android:drawable/ic_dialog_map"
        android:layout_alignTop="@+id/spCat"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add image"
        android:id="@+id/btnImage"
        android:layout_below="@+id/spCat"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
